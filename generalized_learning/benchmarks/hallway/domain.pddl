(define (domain hallway)
    (:requirements :equality :typing)
    (:types
        node - object
    )

    (:predicates
        (at ?x1 - node)
        (adjacent ?x1 - node ?x2 - node)
        (painted ?x1 - node)
    )

    (:action move
     :parameters (?src - node ?dest - node)
     :precondition (and (adjacent ?src ?dest) (at ?src))
     :effect (and
        (not (at ?src))
        (at ?dest))
    )

    (:action paint
     :parameters (?src - node)
     :precondition (and (at ?src))
     :effect (and
        (painted ?src))
    )
)
